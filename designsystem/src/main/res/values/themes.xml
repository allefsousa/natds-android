<?xml version="1.0" encoding="utf-8"?>

<resources>
    <style name="Theme.Natura.NoActionBar" parent="Theme.Natura">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Natura" parent="Theme.DsBaseLight">
        <!-- rewriting material color definitions -->
        <item name="colorPrimary">@color/natPrimary</item>
        <item name="colorOnPrimary">@color/natOnPrimary</item>
        <item name="colorPrimaryVariant">@color/natPrimaryDark</item>
        <item name="colorSecondary">@color/natSecondary</item>
        <item name="colorOnSecondary">@color/natOnSecondary</item>
        <item name="colorSecondaryVariant">@color/natSecondaryDark</item>

        <!-- adding tokens custom colors to theme -->
        <item name="colorPrimaryLight">@color/natPrimaryLight</item>
        <item name="colorOnPrimaryLight">@color/natOnPrimaryLight</item>
        <item name="colorOnPrimaryDark">@color/natOnPrimaryDark</item>
        <item name="colorSecondaryLight">@color/natSecondaryLight</item>
        <item name="colorOnSecondaryLight">?colorOnSecondary</item>
        <item name="colorOnSecondaryDark">?colorOnSecondary</item>

        <!-- legacy definitions based on appcompat colors -->
        <item name="colorPrimaryDark">@color/natPrimaryDark</item>
        <item name="colorAccent">?colorPrimary</item>
        <item name="colorControlHighlight">#1F000000</item>
        <item name="colorControlNormal">@color/lowGrey</item>

        <!-- Type styles -->
        <item name="textAppearanceHeadline6">@style/TextAppearance.MaterialComponents.Headline6</item>
        <item name="textAppearanceBody2">@style/TextAppearance.MaterialComponents.Body2</item>
        <item name="android:textColorPrimary">@color/highGrey</item>
        <item name="android:textColorPrimaryDisableOnly">@color/lowGrey</item>
        <item name="android:textColorSecondary">@color/mediumGrey</item>
        <item name="android:textColorHighlight">@color/white</item>

        <!--Component styles-->
        <item name="buttonStyle">@style/Widget.Natura.Button.DarkText</item>
        <item name="navigationViewStyle">@style/Widget.Natura.NavigationView</item>
        <item name="checkboxStyle">@style/Widget.Natura.CheckBox</item>
        <item name="radioButtonStyle">@style/Widget.Natura.RadioButton</item>
        <item name="toolbarStyle">@style/Widget.Natura.Toolbar</item>
        <item name="searchViewStyle">@style/Widget.Natura.SearchView</item>

        <!--Material buttons style-->
        <item name="materialButtonStyle">@style/Widget.Natura.Button.DarkText</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.Natura.Button.Outlined.DarkText</item>
        <item name="materialBorderlessButtonStyle">@style/Widget.Natura.Button.TextButton.DarkText</item>
    </style>

    <style name="Theme.NaturaDark.NoActionBar" parent="Theme.NaturaDark">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.NaturaDark" parent="Theme.DsBaseDark">
        <item name="colorPrimary">@color/natPrimary</item>
        <item name="colorOnPrimary">@color/natOnPrimary</item>
        <item name="colorPrimaryVariant">@color/natPrimaryDark</item>
        <item name="colorSecondary">@color/natSecondary</item>
        <item name="colorOnSecondary">@color/natOnSecondary</item>
        <item name="colorSecondaryVariant">@color/natSecondaryDark</item>

        <!-- adding tokens custom colors to theme -->
        <item name="colorPrimaryLight">@color/natPrimaryLight</item>
        <item name="colorOnPrimaryLight">@color/natOnPrimaryLight</item>
        <item name="colorOnPrimaryDark">@color/natOnPrimaryDark</item>
        <item name="colorSecondaryLight">@color/natSecondaryLight</item>
        <item name="colorOnSecondaryLight">?colorOnSecondary</item>
        <item name="colorOnSecondaryDark">?colorOnSecondary</item>

        <!-- legacy definitions based on appcompat colors -->
        <item name="colorPrimaryDark">@color/natPrimaryDark</item>
        <item name="colorAccent">?colorPrimary</item>
        <item name="colorControlHighlight">#1F000000</item>
        <item name="colorControlNormal">@color/lowGrey</item>
    </style>

    <!--Not supported officialy-->
    <style name="Theme.Avon" parent="Theme.Natura">
        <item name="colorPrimary">@color/avonLightPrimary</item>
        <item name="colorSecondary">@color/avonSecondary</item>

        <!--Material buttons style-->
        <item name="materialButtonStyle">@style/Widget.Natura.Button</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.Natura.Button.Outlined.StrokeColored</item>
        <item name="materialBorderlessButtonStyle">@style/Widget.Natura.Button.TextButton</item>
    </style>

    <style name="Theme.Avon.NoActionBar" parent="Theme.Avon">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--Not supported officialy-->
    <style name="Theme.BodyShop" parent="Theme.Natura">
        <item name="colorPrimary">@color/tbsLightPrimary</item>
        <item name="colorSecondary">@color/tbsLightSecondary</item>

        <item name="materialButtonStyle">@style/Widget.Natura.Button</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.Natura.Button.Outlined.StrokeColored</item>
        <item name="materialBorderlessButtonStyle">@style/Widget.Natura.Button.TextButton</item>
    </style>

    <style name="Theme.BodyShop.NoActionBar" parent="Theme.BodyShop">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.DsBaseLight" parent="Theme.MaterialComponents.Light">
        <item name="colorHighlight">@color/lightHighlight</item>
        <item name="colorHighEmphasis">@color/lightHighEmphasis</item>
        <item name="colorMediumEmphasis">@color/lightMediumEmphasis</item>
        <item name="colorLowEmphasis">@color/lightLowEmphasis</item>

        <item name="android:colorBackground">@color/lightBackground</item>
        <item name="colorOnBackground">@color/lightOnBackground</item>
        <item name="colorSurface">@color/lightSurface</item>
        <item name="colorOnSurface">@color/lightOnSurface</item>

        <item name="colorLink">@color/link</item>
        <item name="colorOnLink">@color/onLink</item>
        <item name="colorSuccess">@color/success</item>
        <item name="colorWarning">@color/warning</item>
        <item name="colorError">@color/alert</item>
        <item name="colorOnSuccess">@color/onSuccess</item>
        <item name="colorOnWarning">@color/onWarning</item>
        <item name="colorOnError">@color/onAlert</item>

        <item name="android:textColorPrimary">@color/highGrey</item>
        <item name="android:textColorPrimaryDisableOnly">@color/lowGrey</item>
        <item name="android:textColorSecondary">@color/mediumGrey</item>
        <item name="android:textColorHighlight">@color/white</item>
        <item name="android:textColorLink">@color/link</item>

    </style>

    <style name="Theme.DsBaseDark" parent="Theme.MaterialComponents.DayNight">
        <item name="colorHighlight">@color/darkHighlight</item>
        <item name="colorHighEmphasis">@color/darkHighEmphasis</item>
        <item name="colorMediumEmphasis">@color/darkMediumEmphasis</item>
        <item name="colorLowEmphasis">@color/darkLowEmphasis</item>

        <item name="android:colorBackground">@color/darkBackground</item>
        <item name="colorOnBackground">@color/darkOnBackground</item>
        <item name="colorSurface">@color/darkSurface</item>
        <item name="colorOnSurface">@color/darkOnSurface</item>

        <item name="colorLink">@color/link</item>
        <item name="colorOnLink">@color/onLink</item>
        <item name="colorSuccess">@color/success</item>
        <item name="colorWarning">@color/warning</item>
        <item name="colorError">@color/alert</item>
        <item name="colorOnSuccess">@color/onSuccess</item>
        <item name="colorOnWarning">@color/onWarning</item>
        <item name="colorOnError">@color/onAlert</item>

        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorPrimaryDisableOnly">@color/lowGrey</item>
        <item name="android:textColorSecondary">@color/lowerGrey</item>
        <item name="android:textColorHighlight">@color/white</item>
        <item name="android:textColorLink">@color/link</item>
    </style>


    <!-- tokens attributes not covered by material theme -->
    <attr name="colorPrimaryLight" format="color"/>
    <attr name="colorOnPrimaryLight" format="color"/>
    <attr name="colorOnPrimaryDark" format="color"/>
    <attr name="colorSecondaryLight" format="color"/>
    <attr name="colorOnSecondaryLight" format="color"/>
    <attr name="colorOnSecondaryDark" format="color"/>
    <attr name="colorHighlight" format="color"/>
    <attr name="colorHighEmphasis" format="color"/>
    <attr name="colorMediumEmphasis" format="color"/>
    <attr name="colorLowEmphasis" format="color"/>
    <attr name="colorLink" format="color"/>
    <attr name="colorOnLink" format="color"/>
    <attr name="colorSuccess" format="color"/>
    <attr name="colorOnSuccess" format="color"/>
    <attr name="colorWarning" format="color"/>
    <attr name="colorOnWarning" format="color"/>
</resources>
