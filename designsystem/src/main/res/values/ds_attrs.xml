<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="ds_menu">
        <attr name="menu_label" format="string" />
        <attr name="menu_label_color" format="reference" />
        <attr name="menu_icon" format="string" />
        <attr name="menu_label_size" format="reference" />
        <attr name="menu_selected_drawable" format="reference" />
        <attr name="menu_opened_drawable" format="reference" />
        <attr name="menu_is_selected" format="boolean" />
        <attr name="menu_is_enabled" format="boolean" />
        <attr name="menu_is_opened" format="boolean" />
    </declare-styleable>

    <declare-styleable name="ds_submenu">
        <attr name="submenu_label" format="string" />
        <attr name="submenu_label_color" format="reference" />
        <attr name="submenu_label_size" format="reference" />
        <attr name="submenu_selected_drawable" format="reference" />
        <attr name="submenu_is_selected" format="boolean" />
        <attr name="submenu_is_enabled" format="boolean" />
    </declare-styleable>

    <declare-styleable name="ds_primary_button">
        <attr name="button_label" format="string" />
        <attr name="button_icon_left" format="string" />
        <attr name="button_icon_right" format="string" />
        <attr name="button_enabled" format="boolean" />
    </declare-styleable>

    <declare-styleable name="ds_error_default">
        <attr name="error_icon" format="reference" />
        <attr name="error_label" format="string" />
        <attr name="error_button_label" format="string" />
    </declare-styleable>

    <declare-styleable name="ds_text_input_highlight">
        <attr name="description_label" format="string" />
        <attr name="highlight_label" format="string" />
    </declare-styleable>

    <declare-styleable name="ds_text_field_input">
        <attr name="android:inputType" />
        <attr name="android:maxLines" />
        <attr name="android:maxLength" />
        <attr name="android:lines" />
        <attr name="android:hint" />
        <attr name="android:enabled" />
        <attr name="text_field_text" format="string" />
        <attr name="text_field_icon" format="string" />
        <attr name="text_field_label" format="string" />
        <attr name="text_field_footer" format="string" />
        <attr name="text_field_state" format="enum">
            <enum name="none" value="0"/>
            <enum name="success" value="1"/>
            <enum name="error" value="2"/>
        </attr>
    </declare-styleable>

</resources>
