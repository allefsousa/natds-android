<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <View
        android:id="@+id/tg_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/tag_background"/>

    <ImageView
        android:id="@+id/tg_icon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="?spacingMicro"
        android:layout_marginVertical="3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"
        tools:srcCompat="@drawable/default_icon_outlined_default_mockup" />

    <TextView
        android:id="@+id/tg_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="?spacingTiny"
        android:paddingEnd="?spacingTiny"
        android:textAppearance="@style/TextAppearance.DS.Tag"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/tg_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="tag example"/>

</androidx.constraintlayout.widget.ConstraintLayout>
