<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/dialogCustomContent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:gravity="center"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/dialogAlertText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:paddingTop="@dimen/ds_spacing_small"
        android:paddingStart="@dimen/ds_spacing_standard"
        android:paddingEnd="@dimen/ds_spacing_small"
        android:paddingBottom="@dimen/ds_spacing_small"
        android:textAppearance="?textAppearanceBody1"
        android:text="Some body text to make a snapshot test without think about the future."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</LinearLayout>
