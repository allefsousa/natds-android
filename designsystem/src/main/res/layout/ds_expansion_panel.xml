<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ds_expansion_panel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical"
    android:animateLayoutChanges="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ds_expansion_panel_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        app:layout_constraintBottom_toTopOf="@id/ds_expansion_panel_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/ds_expansion_panel_subtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/ds_spacing_standard"
            android:layout_marginLeft="@dimen/ds_spacing_standard"
            android:layout_marginTop="@dimen/ds_spacing_standard"
            android:layout_marginEnd="@dimen/ds_spacing_standard"
            android:layout_marginRight="@dimen/ds_spacing_standard"
            android:layout_marginBottom="@dimen/ds_spacing_standard"
            tools:text="subtitle_label"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/ds_expansion_panel_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textAppearance="?textAppearanceSubtitle1"/>

        <ImageButton
            android:id="@+id/ds_expansion_panel_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/ds_spacing_standard"
            android:layout_marginLeft="@dimen/ds_spacing_standard"
            android:layout_marginTop="@dimen/ds_spacing_standard"
            android:layout_marginEnd="@dimen/ds_spacing_standard"
            android:layout_marginRight="@dimen/ds_spacing_standard"
            android:layout_marginBottom="@dimen/ds_spacing_standard"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ds_expansion_panel_subtitle"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ds_ic_outlined_navigation_arrowbottom"
            android:background="?selectableItemBackgroundBorderless"
            android:contentDescription="Collapse Arrow Icon" />



    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ds_expansion_panel_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ds_expansion_panel_top">

        <TextView
            android:id="@+id/ds_expansion_panel_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/ds_spacing_standard"
            android:layout_marginTop="@dimen/ds_spacing_standard"
            android:layout_marginEnd="@dimen/ds_spacing_standard"
            android:layout_marginBottom="@dimen/ds_spacing_standard"
            tools:text="description_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>



