<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.natura.android.menu.MenuView
        android:id="@+id/menuItemBase"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_menu_item_height"
        app:menu_label="Menu item to test" />

    <com.natura.android.menu.MenuView
        android:id="@+id/menuItemWithIcon"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_menu_item_height"
        app:menu_label="Menu item to test"
        app:menu_icon="default-icon-outlined-action-cancel"/>
</LinearLayout>
