<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Natura" parent="Theme.DsBaseLight">
        <item name="colorPrimary">@color/natPrimary</item>
        <item name="colorOnPrimary">@color/natOnPrimary</item>
        <item name="colorPrimaryVariant">?colorPrimaryDark</item>
        <item name="colorSecondary">@color/natSecondary</item>
        <item name="colorOnSecondary">@color/natOnSecondary</item>
        <item name="colorSecondaryVariant">@color/natSecondaryDark</item>
        <item name="colorPrimaryLight">@color/natPrimaryLight</item>
        <item name="colorOnPrimaryLight">@color/natOnPrimaryLight</item>
        <item name="colorOnPrimaryDark">@color/natOnPrimaryDark</item>
        <item name="colorSecondaryLight">@color/natSecondaryLight</item>
        <item name="colorOnSecondaryLight">?colorOnSecondary</item>
        <item name="colorOnSecondaryDark">?colorOnSecondary</item>

        <!-- Definitions based on appcompat colors -->
        <item name="colorPrimaryDark">@color/natPrimaryDark</item>
        <item name="colorAccent">?colorPrimary</item>
        <item name="colorControlHighlight">#1F000000</item>
        <item name="colorControlNormal">?colorOnPrimary</item>

        <!-- Type styles -->
        <item name="textAppearanceHeadline6">@style/TextAppearance.MaterialComponents.Headline6</item>
        <item name="textAppearanceBody2">@style/TextAppearance.MaterialComponents.Body2</item>

        <!--Component styles-->
        <item name="navigationViewStyle">@style/Widget.Natura.NavigationView</item>
        <item name="searchViewStyle">@style/Widget.Natura.SearchView</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">?colorSurface</item>

        <item name="logoVertical">@drawable/natura_vertical</item>
        <item name="logoHorizontal">@drawable/natura_horizontal</item>
    </style>

    <style name="Theme.Natura.NoActionBar" parent="Theme.Natura">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>