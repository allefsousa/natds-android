<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Avon" parent="Theme.DsBaseLight">
        <item name="colorPrimary">@color/avonLightPrimary</item>
        <item name="colorOnPrimary">@color/avonLightOnPrimary</item>
        <item name="colorPrimaryVariant">@color/avonLightPrimaryDark</item>
        <item name="colorSecondary">@color/avonSecondary</item>
        <item name="colorOnSecondary">@color/avonOnSecondary</item>
        <item name="colorSecondaryVariant">@color/avonSecondaryDark</item>
        <item name="colorPrimaryLight">@color/avonLightPrimaryLight</item>
        <item name="colorOnPrimaryLight">@color/avonLightOnPrimaryLight</item>
        <item name="colorOnPrimaryDark">@color/avonLightOnPrimaryDark</item>
        <item name="colorSecondaryLight">@color/avonSecondaryLight</item>
        <item name="colorOnSecondaryLight">?colorOnSecondary</item>
        <item name="colorOnSecondaryDark">?colorOnSecondary</item>

        <!-- Definitions based on appcompat colors -->
        <item name="colorPrimaryDark">@color/avonLightPrimaryDark</item>
        <item name="colorAccent">?colorPrimary</item>
        <item name="colorControlHighlight">#1F000000</item>
        <item name="colorControlNormal">?colorOnPrimary</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">?colorSurface</item>

        <item name="logoVertical">@drawable/default_icon_outlined_action_cancel</item>
        <item name="logoHorizontal">@drawable/avon_horizontal</item>
    </style>

    <style name="Theme.Avon.NoActionBar" parent="Theme.Avon">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>