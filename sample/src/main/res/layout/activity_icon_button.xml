<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/iconButtonActivityContainer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ScrollView
        android:id="@+id/scrollViewIconButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/iconButtonContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="?spacingMicro">

            <com.natura.android.iconButton.IconButton
                android:id="@+id/iconButtonColorDefault"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:buttonColor="defaultColor"
                app:iconName="outlined_default_mockup"
                app:sizeButton="semi"
                app:styleButton="inherit" />

            <com.natura.android.iconButton.IconButton
                android:id="@+id/iconButtonColorDefaultDisabled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:buttonColor="defaultColor"
                android:enabled="false"
                app:iconName="outlined_default_mockup"
                app:sizeButton="semi"
                app:styleButton="inherit" />

            <com.natura.android.iconButton.IconButton
                android:id="@+id/iconButtonColorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:buttonColor="primaryColor"
                app:iconName="outlined_default_mockup"
                app:sizeButton="semi"
                app:styleButton="inherit" />

            <com.natura.android.iconButton.IconButton
                android:id="@+id/iconButtonColorPrimaryDisabled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                app:buttonColor="primaryColor"
                app:iconName="outlined_default_mockup"
                app:sizeButton="semi"
                app:styleButton="inherit" />

            <com.natura.android.iconButton.IconButton
                android:id="@+id/iconButtonColorLight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:buttonColor="lightColor"
                app:iconName="outlined_default_mockup"
                app:sizeButton="semi"
                app:styleButton="inherit" />

            <com.natura.android.iconButton.IconButton
                android:id="@+id/iconButtonColorLightDisabled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                app:buttonColor="lightColor"
                app:iconName="outlined_default_mockup"
                app:sizeButton="semi"
                app:styleButton="inherit" />

            <com.natura.android.iconButton.IconButton
                android:id="@+id/iconButtonStyleInherit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:buttonColor="defaultColor"
                app:iconName="outlined_default_mockup"
                app:sizeButton="semi"
                app:styleButton="inherit" />

            <com.natura.android.iconButton.IconButton
                android:id="@+id/iconButtonStyleFloating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:buttonColor="defaultColor"
                app:iconName="outlined_default_mockup"
                app:sizeButton="semi"
                app:styleButton="floating" />

            <com.natura.android.iconButton.IconButton
                android:id="@+id/iconButtonStyleFloatingDisabled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:buttonColor="defaultColor"
                android:enabled="false"
                app:iconName="outlined_default_mockup"
                app:sizeButton="semi"
                app:styleButton="floating" />

            <com.natura.android.iconButton.IconButton
                android:id="@+id/iconButtonStyleOverlay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:buttonColor="defaultColor"
                app:iconName="outlined_default_mockup"
                app:sizeButton="semi"
                app:styleButton="overlay" />

            <com.natura.android.iconButton.IconButton
                android:id="@+id/iconButtonStyleOverlayDisabled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:buttonColor="defaultColor"
                android:enabled="false"
                app:iconName="outlined_default_mockup"
                app:sizeButton="semi"
                app:styleButton="overlay" />

            <com.natura.android.iconButton.IconButton
                android:id="@+id/iconButtonSizeSemi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:buttonColor="defaultColor"
                app:iconName="outlined_default_mockup"
                app:sizeButton="semi"
                app:styleButton="inherit" />

            <com.natura.android.iconButton.IconButton
                android:id="@+id/iconButtonSizeSemix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:buttonColor="defaultColor"
                app:iconName="outlined_default_mockup"
                app:sizeButton="semix"
                app:styleButton="inherit" />

            <com.natura.android.iconButton.IconButton
                android:id="@+id/iconButtonSizeMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:buttonColor="defaultColor"
                app:iconName="outlined_default_mockup"
                app:sizeButton="medium"
                app:styleButton="inherit" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>