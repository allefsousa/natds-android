<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/shortcutContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".components.ShortcutActivity">

    <com.natura.android.shortcut.Shortcut
        android:id="@+id/firstShortcutContained"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="?spacingSmall"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/secondShortcutContained"
        app:layout_constraintTop_toTopOf="parent"
        app:shct_icon_name="outlined-default-mockup"
        app:shct_notify="1000"
        app:shct_text_label="Contained/ \nPrimary"
        app:shct_type="contained" />

    <com.natura.android.shortcut.Shortcut
        android:id="@+id/secondShortcutContained"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="?spacingSmall"
        app:layout_constraintBottom_toBottomOf="@+id/firstShortcutContained"
        app:layout_constraintEnd_toStartOf="@+id/firstShortcutContained"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/thirdShortcutContained"
        app:layout_constraintTop_toTopOf="parent"
        app:shct_icon_name="outlined-default-mockup"
        app:shct_notify="10"
        app:shct_text_label="Contained/ \nPrimary"
        app:shct_type="contained" />

    <com.natura.android.shortcut.Shortcut
        android:id="@+id/thirdShortcutContained"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="?spacingSmall"
        app:layout_constraintBottom_toBottomOf="@+id/secondShortcutContained"
        app:layout_constraintEnd_toStartOf="@+id/secondShortcutContained"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/fourthShortcutContained"
        app:layout_constraintTop_toTopOf="parent"
        app:shct_icon_name="outlined-default-mockup"
        app:shct_notify="1"
        app:shct_text_label="Contained/ \nPrimary"
        app:shct_type="contained" />

    <com.natura.android.shortcut.Shortcut
        android:id="@+id/fourthShortcutContained"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="?spacingSmall"
        app:layout_constraintBottom_toBottomOf="@+id/thirdShortcutContained"
        app:layout_constraintEnd_toStartOf="@+id/thirdShortcutContained"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shct_icon_name="outlined-default-mockup"
        app:shct_text_label="Contained/ \nPrimary"
        app:shct_type="contained" />

    <com.natura.android.shortcut.Shortcut
        android:id="@+id/firstShorcutOutlined"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="?spacingSmall"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/secondShortcutOutlined"
        app:layout_constraintTop_toBottomOf="@+id/firstShortcutContained"
        app:shct_icon_name="outlined-default-mockup"
        app:shct_text_label="Outlined/ \nPrimary"
        app:shct_type="outlined" />

    <com.natura.android.shortcut.Shortcut
        android:id="@+id/secondShortcutOutlined"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="?spacingSmall"
        app:layout_constraintBottom_toBottomOf="@+id/firstShorcutOutlined"
        app:layout_constraintEnd_toStartOf="@+id/firstShorcutOutlined"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/thirdShortcutOutlined"
        app:layout_constraintTop_toBottomOf="@+id/secondShortcutContained"
        app:shct_icon_name="outlined-default-mockup"
        app:shct_text_label="Outlined/ \nPrimary"
        app:shct_type="outlined" />

    <com.natura.android.shortcut.Shortcut
        android:id="@+id/thirdShortcutOutlined"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="?spacingSmall"
        app:layout_constraintBottom_toBottomOf="@+id/secondShortcutOutlined"
        app:layout_constraintEnd_toStartOf="@+id/secondShortcutOutlined"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/fourthShortcutOutlined"
        app:layout_constraintTop_toBottomOf="@+id/thirdShortcutContained"
        app:shct_icon_name="outlined-default-mockup"
        app:shct_text_label="Outlined/ \nPrimary"
        app:shct_type="outlined" />

    <com.natura.android.shortcut.Shortcut
        android:id="@+id/fourthShortcutOutlined"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="?spacingSmall"
        app:layout_constraintBottom_toBottomOf="@+id/thirdShortcutOutlined"
        app:layout_constraintEnd_toStartOf="@+id/thirdShortcutOutlined"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fourthShortcutContained"
        app:shct_icon_name="outlined-default-mockup"
        app:shct_text_label="Outlined/ \nPrimary"
        app:shct_type="outlined" />

    <TextView
        android:id="@+id/counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Counter click 0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>