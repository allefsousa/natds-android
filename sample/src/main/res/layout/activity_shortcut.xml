<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".components.ShortcutActivity">

    <com.natura.android.shortcut.ShortCut
        android:id="@+id/shortCut2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/shortCut"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shortcutBackgroundColor="?colorSecondary"
        app:shortcutIcon="@drawable/outlined_default_mockup"
        app:shortcutIconColor="?colorOnSecondary"
        app:shortcutLabel="Shortcut contained"
        app:shortcutLabelAppearance="?textAppearanceCaption"
        app:shortcutType="contained" />

    <com.natura.android.shortcut.ShortCut
        android:id="@+id/shortCut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/shortCut2"
        app:layout_constraintTop_toTopOf="parent"
        app:shortcutBackgroundColor="?colorSecondary"
        app:shortcutIcon="@drawable/outlined_default_mockup"
        app:shortcutIconColor="?colorSecondary"
        app:shortcutLabel="Shortcut outlined"
        app:shortcutLabelAppearance="?textAppearanceCaption"
        app:shortcutType="outlined" />
</androidx.constraintlayout.widget.ConstraintLayout>