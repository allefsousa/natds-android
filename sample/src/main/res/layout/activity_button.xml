<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="?spacingTiny"
        android:paddingEnd="?spacingTiny">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/ds_spacing_small"
            android:layout_marginStart="@dimen/ds_spacing_micro"
            android:layout_marginEnd="@dimen/ds_spacing_micro"
            android:weightSum="3">

            <com.natura.android.button.ContainedButton
                android:id="@+id/containedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/button_screen_contained_semix_text"
                app:bt_size="semix"
                android:layout_marginEnd="@dimen/ds_spacing_micro"
                android:layout_weight="1"/>

            <com.natura.android.button.OutlinedButton
                android:id="@+id/outlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/button_screen_outlined_semix_text"
                app:bt_size="semix"
                android:layout_marginEnd="@dimen/ds_spacing_micro"
                android:layout_weight="1"/>

            <com.natura.android.button.TextButton
                android:id="@+id/textButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/button_screen_text_semix_text"
                app:bt_size="semix"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/ds_spacing_micro"
            android:layout_marginStart="@dimen/ds_spacing_micro"
            android:layout_marginEnd="@dimen/ds_spacing_micro"
            android:weightSum="3">

            <com.natura.android.button.ContainedButton
                android:id="@+id/containedButtonDisable"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:minWidth="?sizeHuge"
                android:text="DISABLED"
                app:bt_size="semix"
                android:layout_marginEnd="@dimen/ds_spacing_micro"
                android:layout_weight="1"/>

            <com.natura.android.button.OutlinedButton
                android:id="@+id/outlinedButtonDisable"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:text="DISABLED"
                app:bt_size="semix"
                android:layout_marginEnd="@dimen/ds_spacing_micro"
                android:layout_weight="1"/>

            <com.natura.android.button.TextButton
                android:id="@+id/textButtonDisable"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:text="DISABLED"
                app:bt_size="semix"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/ds_spacing_micro"
            android:layout_marginStart="@dimen/ds_spacing_micro"
            android:layout_marginEnd="@dimen/ds_spacing_micro"
            android:weightSum="3">

            <com.natura.android.button.ContainedButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="DEFAULT"
                app:bt_size="semix"
                android:layout_marginEnd="@dimen/ds_spacing_micro"
                app:bt_color="defaultColor"
                android:layout_weight="1" />

            <com.natura.android.button.OutlinedButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="DEFAULT"
                app:bt_size="semix"
                android:layout_marginEnd="@dimen/ds_spacing_micro"
                app:bt_color="defaultColor"
                android:layout_weight="1"/>

            <com.natura.android.button.TextButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="DEFAULT"
                app:bt_size="semix"
                app:bt_color="defaultColor"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/ds_spacing_micro"
            android:layout_marginStart="@dimen/ds_spacing_micro"
            android:layout_marginEnd="@dimen/ds_spacing_micro"
            android:weightSum="3">

            <com.natura.android.button.ContainedButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="ON PRIMARY"
                android:layout_marginEnd="@dimen/ds_spacing_micro"
                app:bt_size="semix"
                app:bt_color="onPrimaryColor"
                android:layout_weight="1" />

            <com.natura.android.button.OutlinedButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/ds_spacing_micro"
                android:text="ON PRIMARY"
                app:bt_size="semix"
                app:bt_color="onPrimaryColor"
                android:layout_weight="1"/>

            <com.natura.android.button.TextButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="ON PRIMARY"
                app:bt_size="semix"
                app:bt_color="onPrimaryColor"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/ds_spacing_micro"
            android:layout_marginStart="@dimen/ds_spacing_micro"
            android:layout_marginEnd="@dimen/ds_spacing_micro"
            android:weightSum="3">

            <com.natura.android.button.ContainedButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="SECONDARY"
                app:bt_size="semix"
                android:layout_marginEnd="@dimen/ds_spacing_micro"
                app:bt_color="secondaryColor"
                android:layout_weight="1" />

            <com.natura.android.button.OutlinedButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="SECONDARY"
                app:bt_size="semix"
                android:layout_marginEnd="@dimen/ds_spacing_micro"
                app:bt_color="secondaryColor"
                android:layout_weight="1"/>

            <com.natura.android.button.TextButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="SECONDARY"
                app:bt_size="semix"
                app:bt_color="secondaryColor"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/ds_spacing_micro"
            android:layout_marginStart="@dimen/ds_spacing_micro"
            android:layout_marginEnd="@dimen/ds_spacing_micro"
            android:weightSum="3">

            <com.natura.android.button.ContainedButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="ON SECOND"
                app:bt_size="semix"
                android:layout_marginEnd="@dimen/ds_spacing_micro"
                app:bt_color="onSecondaryColor"
                android:layout_weight="1" />

            <com.natura.android.button.OutlinedButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="ON SECOND"
                app:bt_size="semix"
                android:layout_marginEnd="@dimen/ds_spacing_micro"
                app:bt_color="onSecondaryColor"
                android:layout_weight="1"/>

            <com.natura.android.button.TextButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="ON SECOND"
                app:bt_size="semix"
                app:bt_color="onSecondaryColor"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/ds_spacing_micro"
            android:layout_marginStart="@dimen/ds_spacing_micro"
            android:layout_marginEnd="@dimen/ds_spacing_micro"
            android:weightSum="3">

            <com.natura.android.button.ContainedButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="INVERSE"
                app:bt_size="semix"
                android:layout_marginEnd="@dimen/ds_spacing_micro"
                app:bt_color="inverse"
                android:layout_weight="1" />

            <com.natura.android.button.OutlinedButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="INVERSE"
                android:layout_marginEnd="@dimen/ds_spacing_micro"
                app:bt_size="semix"
                app:bt_color="inverse"
                android:layout_weight="1"/>

            <com.natura.android.button.TextButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="INVERSE"
                app:bt_size="semix"
                app:bt_color="inverse"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/ds_spacing_micro"
            android:layout_marginStart="@dimen/ds_spacing_micro"
            android:layout_marginEnd="@dimen/ds_spacing_micro"
            android:weightSum="3">

            <com.natura.android.button.ContainedButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="ON INVERSE"
                app:bt_size="semix"
                app:bt_color="onInverse"
                android:layout_marginEnd="@dimen/ds_spacing_micro"
                android:layout_weight="1" />

            <com.natura.android.button.OutlinedButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="ON INVERSE"
                app:bt_size="semix"
                app:bt_color="onInverse"
                android:layout_marginEnd="@dimen/ds_spacing_micro"
                android:layout_weight="1"/>

            <com.natura.android.button.TextButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="ON INVERSE"
                app:bt_size="semix"
                app:bt_color="onInverse"
                android:layout_weight="1"/>

        </LinearLayout>

        <com.natura.android.button.ContainedButton
            android:id="@+id/blockContainedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="?spacingSmall"
            android:text="@string/button_screen_contained_medium_text"
            app:icon="@drawable/outlined_action_like"
            app:iconGravity="textStart"
            app:bt_size="medium" />

        <com.natura.android.button.ContainedButton
            android:id="@+id/blockContainedButtonWithIcon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="?spacingSmall"
            android:text="@string/button_screen_contained_semix_with_icon_text"
            app:bt_size="semix"
            android:textAllCaps="false"
            app:icon="@drawable/outlined_action_like"
            app:iconGravity="textEnd" />

        <com.natura.android.button.ContainedButton
            android:id="@+id/blockContainedButtonDisable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="?spacingSmall"
            android:enabled="false"
            android:text="@string/button_screen_contained_disabled_semi_text"
            app:bt_size="semi" />

        <com.natura.android.button.OutlinedButton
            android:id="@+id/blockMediumOutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="?spacingSemi"
            android:text="@string/button_screen_outlined_medium_text"
            app:icon="@drawable/outlined_action_like"
            app:iconGravity="textStart"
            app:bt_size="medium" />

        <com.natura.android.button.OutlinedButton
            android:id="@+id/blockSemixOutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="?spacingSmall"
            android:text="@string/button_screen_outlined_semix_with_icon_text"
            app:bt_size="semix"
            app:icon="@drawable/outlined_action_like"
            app:iconGravity="textEnd" />

        <com.natura.android.button.OutlinedButton
            android:id="@+id/blockSemiOutlinedButtonDisable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="?spacingSmall"
            android:enabled="false"
            android:text="@string/button_screen_outlined_disabled_semi_text"
            app:bt_size="semi" />

        <com.natura.android.button.TextButton
            android:id="@+id/blockTextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="?spacingSmall"
            android:text="@string/button_screen_text_medium_text"
            app:bt_size="medium"
            app:icon="@drawable/outlined_action_like"
            app:iconGravity="textStart"/>

        <com.natura.android.button.TextButton
            android:id="@+id/blockTextButtonDisable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="?spacingSmall"
            android:enabled="false"
            android:text="@string/button_screen_text_medium_disabled_text"
            app:bt_size="medium"
            app:icon="@drawable/outlined_action_like"
            app:iconGravity="textEnd"/>

    </LinearLayout>
</ScrollView>
