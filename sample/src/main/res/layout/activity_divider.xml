<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

   <TextView
       android:id="@+id/textView1"
       android:layout_width="match_parent"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintRight_toRightOf="parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="?spacingXLarge"
       android:gravity="center"
       app:layout_constraintTop_toTopOf="parent"
       android:text="Full-bleed" />

   <com.natura.android.divider.Divider
       android:id="@+id/dividerFullbleed"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:layout_constraintTop_toBottomOf="@id/textView1"
       app:layout_constraintLeft_toLeftOf="parent"
       app:dividerType="fullBleed" />

   <TextView
       android:id="@+id/textView2"
       android:layout_width="match_parent"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintRight_toRightOf="parent"
       android:layout_height="wrap_content"
       android:gravity="center"
       app:layout_constraintTop_toBottomOf="@id/dividerFullbleed"
       android:text="Full-bleed" />

   <TextView
       android:id="@+id/textView3"
       android:layout_width="match_parent"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintRight_toRightOf="parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="?spacingXLarge"
       android:gravity="center"
       app:layout_constraintTop_toBottomOf="@id/textView2"
       android:text="Inset" />

   <com.natura.android.divider.Divider
       android:id="@+id/dividerInset"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:layout_constraintTop_toBottomOf="@id/textView3"
       app:layout_constraintLeft_toLeftOf="parent"
       app:dividerType="inset" />

   <TextView
       android:id="@+id/textView4"
       android:layout_width="match_parent"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintRight_toRightOf="parent"
       android:layout_height="wrap_content"
       android:gravity="center"
       app:layout_constraintTop_toBottomOf="@id/dividerInset"
       android:text="Inset" />

   <TextView
       android:id="@+id/textView5"
       android:layout_width="match_parent"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintRight_toRightOf="parent"
       android:layout_height="wrap_content"
       android:gravity="center"
       android:layout_marginTop="?spacingXLarge"
       app:layout_constraintTop_toBottomOf="@id/textView4"
       android:text="Middle" />

   <com.natura.android.divider.Divider
       android:id="@+id/dividerMiddle"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:layout_constraintTop_toBottomOf="@id/textView5"
       app:layout_constraintLeft_toLeftOf="parent"
       app:dividerType="middle" />

   <TextView
       android:id="@+id/textView6"
       android:layout_width="match_parent"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintRight_toRightOf="parent"
       android:layout_height="wrap_content"
       android:gravity="center"
       app:layout_constraintTop_toBottomOf="@id/dividerMiddle"
       android:text="Middle" />


</androidx.constraintlayout.widget.ConstraintLayout>