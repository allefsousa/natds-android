<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

   <TextView
       android:id="@+id/textViewFullBleed1"
       android:layout_width="match_parent"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintRight_toRightOf="parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="?spacingXLarge"
       android:gravity="center"
       app:layout_constraintTop_toTopOf="parent"
       android:text="@string/divider_screen_fullbleed_text" />

   <com.natura.android.divider.Divider
       android:id="@+id/dividerFullbleed"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:layout_constraintTop_toBottomOf="@id/textViewFullBleed1"
       app:layout_constraintLeft_toLeftOf="parent"
       app:dividerType="fullBleed" />

   <TextView
       android:id="@+id/textViewFullBleed2"
       android:layout_width="match_parent"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintRight_toRightOf="parent"
       android:layout_height="wrap_content"
       android:gravity="center"
       app:layout_constraintTop_toBottomOf="@id/dividerFullbleed"
       android:text="@string/divider_screen_fullbleed_text" />

   <TextView
       android:id="@+id/textViewInset1"
       android:layout_width="match_parent"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintRight_toRightOf="parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="?spacingXLarge"
       android:gravity="center"
       app:layout_constraintTop_toBottomOf="@id/textViewFullBleed2"
       android:text="@string/divider_screen_inset_text" />

   <com.natura.android.divider.Divider
       android:id="@+id/dividerInset"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:layout_constraintTop_toBottomOf="@id/textViewInset1"
       app:layout_constraintLeft_toLeftOf="parent"
       app:dividerType="inset" />

   <TextView
       android:id="@+id/textViewInset2"
       android:layout_width="match_parent"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintRight_toRightOf="parent"
       android:layout_height="wrap_content"
       android:gravity="center"
       app:layout_constraintTop_toBottomOf="@id/dividerInset"
       android:text="@string/divider_screen_inset_text" />

   <TextView
       android:id="@+id/textViewMiddle1"
       android:layout_width="match_parent"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintRight_toRightOf="parent"
       android:layout_height="wrap_content"
       android:gravity="center"
       android:layout_marginTop="?spacingXLarge"
       app:layout_constraintTop_toBottomOf="@id/textViewInset2"
       android:text="@string/divider_screen_middle_text" />

   <com.natura.android.divider.Divider
       android:id="@+id/dividerMiddle"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:layout_constraintTop_toBottomOf="@id/textViewMiddle1"
       app:layout_constraintLeft_toLeftOf="parent"
       app:dividerType="middle" />

   <TextView
       android:id="@+id/textViewMiddle2"
       android:layout_width="match_parent"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintRight_toRightOf="parent"
       android:layout_height="wrap_content"
       android:gravity="center"
       app:layout_constraintTop_toBottomOf="@id/dividerMiddle"
       android:text="@string/divider_screen_middle_text" />


</androidx.constraintlayout.widget.ConstraintLayout>