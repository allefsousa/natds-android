<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="40dp"
        tools:context=".tokens.BorderRadiusActivity">

        <TextView
            android:id="@+id/borderNoneLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/border_radius_screen_border_none_text"
            android:textColor="?attr/colorMediumEmphasis"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/borderNone"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@drawable/ds_border_radius_none"
            android:orientation="vertical" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:background="?colorMediumEmphasis"
            android:contentDescription="@null" />

        <TextView
            android:id="@+id/borderSmallLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/border_radius_screen_border_small_text"
            android:textColor="?attr/colorMediumEmphasis"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/borderSmall"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@drawable/ds_border_radius_small"
            android:orientation="vertical" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:background="?colorMediumEmphasis"
            android:contentDescription="@null" />

        <TextView
            android:id="@+id/borderMediumLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/border_radius_screen_border_medium_text"
            android:textColor="?attr/colorMediumEmphasis"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/borderMedium"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@drawable/ds_border_radius_medium"
            android:orientation="vertical" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:background="?colorMediumEmphasis"
            android:contentDescription="@null" />

        <TextView
            android:id="@+id/borderLargeLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/border_radius_screen_border_large_text"
            android:textColor="?attr/colorMediumEmphasis"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/borderLarge"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@drawable/ds_border_radius_large"
            android:orientation="vertical" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:background="?colorMediumEmphasis"
            android:contentDescription="@null" />

        <TextView
            android:id="@+id/borderCircleLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/border_radius_screen_border_circle_text"
            android:textColor="?attr/colorMediumEmphasis"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/borderCircle"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@drawable/ds_border_circle"
            android:orientation="vertical" />
    </LinearLayout>
</ScrollView>